{
  "include": [
    "src/*"
  ],
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "test-setup": [
        "test-setup"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
